{
  "name": "im-api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json && tsc-esm-fix dist",
    "start": "node dist/server.js",
    "seed": "tsx src/scripts/seed.ts",
    "mcp": "tsx mcp-server/index.ts",
    "mcp:build": "esbuild mcp-server/index.ts --bundle --platform=node --format=esm --outfile=mcp-server/mcp-server.js --external:@modelcontextprotocol/sdk",
    "verify-mcp-consistency": "node scripts/verify-mcp-consistency.mjs",
    "generate-mcp-docs": "echo '生成MCP文档脚本待实现'"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.19.2",
    "ioredis": "^5.4.1",
    "jose": "^5.2.3",
    "multer": "^2.0.2",
    "mysql2": "^3.11.3",
    "qrcode": "^1.5.4",
    "sequelize": "^6.37.3",
    "sqlite3": "^5.1.7",
    "ws": "^8.18.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.11.30",
    "@types/qrcode": "^1.5.6",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.10",
    "tsc-alias": "^1.8.16",
    "tsc-esm-fix": "^3.1.2",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
